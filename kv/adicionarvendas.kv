<AdicionarVendas>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.05
            text: "Selecione o cliente"
            id: label_cliente
        ScrollView:
            pos_hint: {"right": 1, "top": 0.95}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_clientes
                size_hint_x : None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True
        Label:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.05
            text: "Selecione o produto"
            id: label_produto
        ScrollView:
            pos_hint: {"right": 1, "top": 0.7}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_produtos
                size_hint_x : None
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True
        Label:
            id: label_data
            pos_hint: {"right": 1, "top": 0.5}
            size_hint: 1, 0.05
            bold: True
            text: "Data: X"

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            pos_hint: {"right": 0.95, "top": 0.225}
            size_hint: 0.4, 0.2
            bold: True
            text: "Confirmar"
            id: botao_confirmar_venda
            markup: True
            on_release: app.adicionar_venda()
        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            pos_hint: {"right": 0.45, "top": 0.225}
            size_hint: 0.4, 0.2
            bold: True
            text: "Cancelar"
            id: botao_cancelar_venda
            markup: True
            on_release: app.mudar_tela("homepage")

        GridLayout:
            cols: 3
            pos_hint: {"right": 0.9, "top": 0.45}
            size_hint: 0.8, 0.1
            LabelButton:
                text: "kg"
                id: und_kg
                on_release: app.selecionar_unidade("und_kg")
            LabelButton:
                text: "unidades"
                id: und_unidades
                on_release: app.selecionar_unidade("und_unidades")
            LabelButton:
                text: "litros"
                id: und_litros
                on_release: app.selecionar_unidade("und_litros")
        GridLayout:
            cols: 2
            pos_hint: {"right": 0.9, "top": 0.355}
            size_hint: 0.8, 0.075
            Label:
                id: preco_label
                text: "Preço total (R$)"
            TextInput:
                id: preco_input
                hint_text: "Digite apenas números"
        GridLayout:
            cols: 2
            pos_hint: {"right": 0.9, "top": 0.275}
            size_hint: 0.8, 0.075
            Label:
                id: quantidade_label
                text: "Quantidade total"
            TextInput:
                id: quantidade_input
                hint_text: "0"
