<AdicionarVendedor>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            pos_hint: {"right": 0.9, "top": 0.8}
            size_hint: 0.8, 0.1
            bold: True
            markup: True
            text: "Insira o [color=#00CFDB]ID de outro vendedor[/color] para acompanh√°-lo"
        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            pos_hint: {"right": 0.9, "top": 0.55}
            size_hint: 0.8, 0.2
            bold: True
            text: "Adicionar Vendedor"
            id: botao_add_vendedor
            markup: True
            on_release: app.adicionar_vendedor(vendedor_input.text)
        TextInput:
            id: vendedor_input
            hint_text: "123"
            pos_hint: {"right": 0.9, "top": 0.7}
            size_hint: 0.8, 0.1
        Label:
            id: mensagem_add_vendedor
            text: ""
            bold: True
            markup: True
            pos_hint: {"right": 0.9, "top": 0.4}
            size_hint: 0.8, 0.1

    FloatLayout:
        pos_hint: {"right": 1, "top": 0.12}
        size_hint: 1, 0.12
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#006D7E")
            Rectangle:
                size: self.size
                pos: self.pos
        ImageButton:
            pos_hint: {"right": 0.2, "top": 0.9}
            size_hint: 0.2, 0.8
            source: "icones/voltar.png"
            on_release: app.mudar_tela("ajustespage")