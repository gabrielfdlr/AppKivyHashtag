#:import utils kivy.utils

FloatLayout:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#001824")
        Rectangle:
            size: self.size
            pos: self.pos
    Image:
        pos_hint: {"right": 1, "top": 0.9}
        size_hint: 1, 0.2
        source: "icones/hash.png"
        id: foto_perfil
    ScreenManager:
        pos_hint: {"right": 1, "top": 0.7}
        size_hint: 1, 0.7
        id: screen_manager
        LoginPage:
            name: "loginpage"
            id: loginpage
        HomePage:
            name: "homepage"
            id: homepage
        AjustesPage:
            name: "ajustespage"
            id: ajustespage
        AdicionarVendas:
            name: "adicionarvendas"
            id: adicionarvendas
        ListarVendedores:
            name: "listarvendedores"
            id: listarvendedores
        FotoPerfil:
            name: "fotoperfil"
            id: fotoperfil
        AdicionarVendedor:
            name: "adicionarvendedor"
            id: adicionarvendedor
        TodasVendas:
            name: "todasvendas"
            id: todasvendas
        VendasVendedor:
            name: "vendasvendedor"
            id: vendasvendedor
